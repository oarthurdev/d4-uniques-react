{
    "version": 2,
    "builds": [
      {
        "src": "server/serverless/api.js",
        "use": "@vercel/node"
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "server/client/build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server/serverless/api.js"
      },
      {
        "src": "/(.*)",
        "dest": "/server/client/build/$1"
      }
    ]
  }
  