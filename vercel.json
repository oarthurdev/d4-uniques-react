{
  "version": 2,
  "builds": [
    {
      "src": "server/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/prisma/schema.prisma",
      "use": "@vercel/static"
    },
    {
      "src": "server/client/build/**",
      "use": "@vercel/static"
    }
  ],
  "buildCommand": "./server/prisma-generate.sh && npm run deploy",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/app.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server/client/build/$1"
    }
  ]
}
