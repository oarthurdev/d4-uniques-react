{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server/client/build/**"
        ]
      }
    },
    {
      "src": "server/app.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server/routes/**",
          "server/controllers/**",
          "server/middleware/**",
          "server/services/**",
          "server/utils/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "/src/server.js"
    }
  ],
  "build": {
    "env": {
      "DATABASE_URL": "@your_database_url"
    },
    "commands": {
      "build": "cd server && npx prisma generate && cd .. && npm run deploy"
    }
  }
}
